{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Bootstrap Build System",
      "type": "shell",
      "command": "odin",
      "args": ["build", "build.odin", "-file", "-out:build.exe"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Hot Reload Development",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-Command",
        "odin build build.odin -file -out:build.exe && .\\build.exe hot-reload"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "____NEVER_MATCH_ANYTHING____",
          "file": 1,
          "line": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "ðŸ”¥ Hot Reload Build System",
          "endsPattern": "âœ… Watching for file changes"
        }
      }
    },
    {
